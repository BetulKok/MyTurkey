@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<form class="form-inline">
    <select asp-for="BolgeId" asp-items="Model.Bolgeler" class="form-control">
        <option value="">Tümü</option>
    </select>
    <button class="btn btn-primary ml-2 ">Listele</button>
</form>

<table class="table table-striped mt-2">
    <thead>
        <tr>
            <th>Plaka</th>
            <th>Şehir</th>
            <th>Nüfus</th>
            <th>Bölge</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sehir in Model.Sehirler)
        {
            <tr>
                <td>@sehir.Id</td>
                <td>@sehir.SehirAd</td>
                <td>@sehir.Nufus</td>
                <td>@sehir.Bolge.BolgeAd</td>
            </tr>
        }

<tbody>
</table>
